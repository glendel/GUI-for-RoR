<%-
  set_page_title( 'Users' )
  locals = {
    :link_to_list => link_to( 'List', '#users_list_tab' ),
    :link_to_new => link_to( 'New', new_user_path ),
    :initial_tab_id => 'users_list_tab',
    :initial_tab_content => render( { :partial => 'users/list' } )
  }
-%>
<%= render( { :partial => 'users/tabs', :locals => locals } ) %>
<%-
  content_for( :document_ready_ui ) do
-%>
  $( 'button[id^="show_user"]' ).button( {
    text : false,
    icons : {
      primary : 'ui-icon-info'
    }
  } ).bind( 'mousedown', {
    isADialog : true,
    options : {
      modal : true
    }
  }, buttonMouseDownHandler );
  $( 'button[id^="edit_user"]' ).button( {
    text : false,
    icons : {
      primary : 'ui-icon-pencil'
    }
  } ).bind( 'mousedown', {
    
  }, buttonMouseDownHandler );
  $( 'button[id^="destroy_user"]' ).button( {
    text : false,
    icons : {
      primary : 'ui-icon-trash'
    }
  } ).bind( 'mousedown', {
    data : {
      _method : 'delete'
    }
  }, buttonMouseDownHandler );
  $( '#new_user' ).button( {
    label : 'New User'
  } ).bind( 'mousedown', {
    url : '<%= new_user_path %>'
  }, buttonMouseDownHandler );
<%-
  end
-%>
