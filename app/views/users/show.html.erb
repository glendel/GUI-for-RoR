<%-
  set_page_title( 'User Details' )
  locals = {
    :link_to_list => link_to( content_tag( :span, '', { :class => 'ui-icon ui-icon-note' } ) + 'List', users_path ),
    :link_to_show => link_to( content_tag( :span, '', { :class => 'ui-icon ui-icon-info' } ) + 'Show', '#show_user_tab' ),
