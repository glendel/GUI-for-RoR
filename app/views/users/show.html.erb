    :initial_tab_id => 'show_user_tab',
    :initial_tab_content => render( { :partial => 'users/show', :locals => { :user => @user } } ),
    :tabs_that_act_as_links => { 0 => true },
    :selected => 1,
    :user => @user
  }
-%>
<%= render( { :partial => 'users/tabs', :locals => locals } ) %>
